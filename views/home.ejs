<h1> <%= user %> </h1>
<title>Home</title>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');

    body{
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #023;
        color: deepskyblue;
    }
    h1 {
    font-size: 3em;
    color: #0066FF;
    letter-spacing: 5px;
    transition: .75s;
    font-family: 'Poppins';
    }
    .start {
        letter-spacing: 10px;
        transition: .75s;
    }
</style>

<script>
    let h1 = document.querySelector('h1')
    setInterval(function () {h1.classList.add('start')}, 1000);
    setInterval(function () {h1.classList.toggle('start')}, 2000);
</script>